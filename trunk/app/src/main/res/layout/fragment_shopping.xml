<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/shoppingback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/datailsfanhui" />

        <TextView
            android:id="@+id/shoppingcart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="购物车(0)"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="编辑"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/shopping_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/waitup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/sousuocuowuyemian"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_all"
            style="@style/CustomCheckboxTheme"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.03"
            android:checked="false"
            android:text="全选"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:gravity="center_vertical"
            android:text="合计:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:gravity="center_vertical"
            android:text="0.00"
            android:textColor="#ff9d46" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:gravity="center_vertical"
            android:text="不含运费"
            android:textColor="#c3c3c3"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settleaccounts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#f5b410"
            android:text="结算(0)"
            android:textColor="#ffffff" />
    </LinearLayout>


</LinearLayout>
